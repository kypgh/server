{
	"info": {
		"_postman_id": "delete-stripe-account-collection",
		"name": "Delete Stripe Connect Account",
		"description": "Simple collection to delete Stripe Connect accounts for Cyprus migration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Delete Stripe Connect Account",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Account deleted successfully\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(true);",
							"    pm.expect(jsonData.data.deleted).to.eql(true);",
							"});",
							"",
							"console.log(\"Stripe account deleted:\", pm.response.json());"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{brandToken}}",
						"description": "Brand JWT token"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/brand/stripe/account",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"brand",
						"stripe",
						"account"
					]
				},
				"description": "Deletes the Stripe Connect account for the authenticated brand. This will:\n1. Delete the account from Stripe\n2. Clear the account ID from the brand record\n3. Reset onboarding status to false\n\nAfter deletion, the brand can create a new Cyprus-based account."
			},
			"response": [
				{
					"name": "Success - Account Deleted",
					"originalRequest": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{brandToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/brand/stripe/account",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"brand",
								"stripe",
								"account"
							]
						}
					},
					"status": "OK",
					"code": 200,
					"_postman_previewlanguage": "json",
					"header": [
						{
							"key": "Content-Type",
							"value": "application/json"
						}
					],
					"cookie": [],
					"body": "{\n  \"success\": true,\n  \"data\": {\n    \"deleted\": true,\n    \"accountId\": \"acct_1234567890\",\n    \"message\": \"Stripe Connect account deleted successfully\"\n  }\n}"
				},
				{
					"name": "Error - No Account to Delete",
					"originalRequest": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{brandToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/brand/stripe/account",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"brand",
								"stripe",
								"account"
							]
						}
					},
					"status": "Bad Request",
					"code": 400,
					"_postman_previewlanguage": "json",
					"header": [
						{
							"key": "Content-Type",
							"value": "application/json"
						}
					],
					"cookie": [],
					"body": "{\n  \"success\": false,\n  \"error\": {\n    \"code\": \"STRIPE_004\",\n    \"message\": \"No Stripe account to delete\"\n  }\n}"
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3001",
			"description": "Base URL for your API"
		},
		{
			"key": "brandToken",
			"value": "your_brand_jwt_token_here",
			"description": "JWT token for brand authentication"
		}
	]
}